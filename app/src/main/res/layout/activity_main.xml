<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_onSurface"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/InputEditText"
        android:layout_width="372dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="124dp"
        android:background="@color/md_theme_dark_secondaryContainer"
        android:backgroundTint="@color/md_theme_dark_secondary"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="right"
        android:includeFontPadding="true"
        android:inputType="text|textMultiLine"
        android:textSize="20sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/button2"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />


    <Button
        android:id="@+id/button3"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/button4"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button0"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="312dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button7"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="204dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/decimalButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="104dp"
        android:layout_marginTop="312dp"
        android:text="."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button10"
        style="@style/NattamiButtons"
        android:layout_marginStart="104dp"
        android:layout_marginTop="204dp"
        android:text="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />


    <Button
        android:id="@+id/clearTextButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="200dp"
        android:layout_marginTop="312dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button8"
        style="@style/NattamiButtons"
        android:layout_marginStart="200dp"
        android:layout_marginTop="204dp"
        android:text="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/divideButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/multiplyButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/divideButton" />

    <Button
        android:id="@+id/addButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="272dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/tanButton" />

    <Button
        android:id="@+id/subtractButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="468dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/clearTextButton"
        app:layout_constraintTop_toTopOf="@+id/InputEditText" />

    <Button
        android:id="@+id/sinButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="@dimen/functionButtonPadding"
        android:text="Sin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/cosButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="@dimen/functionButtonPadding"
        android:text="Cos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/InputEditText" />

    <Button
        android:id="@+id/tanButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="@dimen/functionButtonPadding"
        android:text="Tan"
        app:layout_constraintStart_toEndOf="@+id/sinButton"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="159dp"
        android:layout_height="72dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="488dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="@dimen/functionButtonPadding"
        android:text="Enter/="
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <TextView
        android:layout_width="288dp"
        android:layout_height="102dp"
        android:fontFamily="casual"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="36dp" />


</androidx.constraintlayout.widget.ConstraintLayout>