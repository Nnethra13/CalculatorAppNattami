<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_onSurface"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/button2"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/button3"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/button4"
        style="@style/NattamiButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />



    <Button
        android:id="@+id/button5"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2" />


    <Button
        android:id="@+id/button7"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/divideButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/multiplyButton"
        style="@style/NattamiButtons"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="X"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/divideButton" />

    <EditText
        android:id="@+id/InputEditText"
        android:layout_width="377dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        android:background="@color/md_theme_dark_secondaryContainer"
        android:backgroundTint="@color/md_theme_dark_secondary"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="right"
        android:includeFontPadding="true"
        android:inputType="text|textMultiLine"
        android:textSize="20sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/sinButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:text="Sin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/cosButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:text="Cos"
        app:layout_constraintStart_toEndOf="@+id/sinButton"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />

    <Button
        android:id="@+id/tanButton"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:text="Tan"
        app:layout_constraintStart_toEndOf="@+id/sinButton"
        app:layout_constraintTop_toBottomOf="@+id/InputEditText" />/>

</androidx.constraintlayout.widget.ConstraintLayout>